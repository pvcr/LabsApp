<UserControl x:Class="Labs.Views.MainPage.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labs.Views.MainPage"
             xmlns:local1="clr-namespace:Labs.Views.Sample"
             xmlns:local2="clr-namespace:Labs.Views.Instrument"
             xmlns:local3="clr-namespace:Labs.Views.WorkPage"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="layoutMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"  />         
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.12*" />
            <ColumnDefinition Width="0.12*" />
            <ColumnDefinition Width="0.76*" />
        </Grid.ColumnDefinitions>
        <local1:Sample Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <local2:Instrument Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <local3:WorkPage Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

    </Grid>
</UserControl>
